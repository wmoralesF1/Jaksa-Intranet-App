<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    android:paddingHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchProductionBusActivity">
    <TextView
        android:id="@+id/tvtituloSearchProductionBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda de Producción de Buses"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="Fecha Viaje :"
            android:textSize="15sp"
            ></TextView>
        <EditText
            android:id="@+id/etFechaViajeSearchProductionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="65"
            android:textSize="15sp"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="Terminal :"
            android:textSize="15sp"
            ></TextView>
        <Spinner
            android:id="@+id/spTerminalSearchProductionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:textSize="15sp"
            ></Spinner>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBuscarViajesSearchProductionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:text="Ver Salidas"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            ></Button>
        <Button
            android:id="@+id/btnBuscarViajesViewProductionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:text="Ver Produccion"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            ></Button>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hsListViewProductionBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="N° Bus"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Asiento"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Hora Viaje"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Servicio"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Lima"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Chincha"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pisco"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Ica"
                    android:textStyle="bold"
                    android:textSize="15sp"></TextView>

            </LinearLayout>
            <ListView
                android:id="@+id/lvListaViajeViewProductionBus"
                android:listSelector="#FFFF00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/llListViewProgrammingTravel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="Id Viaje"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="Hora Viaje"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:text="N° Bus"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="Tramo"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="Servicio"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>

        </LinearLayout>
        <ListView
            android:id="@+id/lvListaViajeSearchProductionBus"
            android:listSelector="#FFFF00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>


</LinearLayout>