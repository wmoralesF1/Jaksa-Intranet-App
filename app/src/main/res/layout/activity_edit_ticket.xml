<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    android:paddingHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditTicket">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvtituloEditTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edición de Boleto de Viaje"
            android:gravity="center_horizontal"
            android:textSize="25sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Precio : "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etPrecioEditTicket"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>
            <EditText
                android:id="@+id/etPrecioNuevoEditTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="N° Asiento : "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etNumeroAsientoEditTicket"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>
            <EditText
                android:id="@+id/etNumeroAsientoNuevoEditTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="N° Viaje : "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etIdViajeEditTicket"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>
            <EditText
                android:id="@+id/etIdViajeNuevoEditTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="15sp"
                ></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAnularEditTicket"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="Anular"
                android:layout_marginRight="10sp"
                android:drawableRight="@drawable/ic_baseline_delete_24"
                android:textSize="15sp"
                ></Button>
            <Button
                android:id="@+id/btnModificarEditTicket"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="Grabar"
                android:layout_marginLeft="10sp"
                android:drawableRight="@drawable/ic_baseline_save_24"
                android:textSize="15sp"
                ></Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>