<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PassengerActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDescRutaPassenger"
            android:gravity="left"
            android:layout_width="match_parent"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvFechaHoraReservaPassenger"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textColor="#FFEB3B"
            android:textSize="15sp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvServicioPassenger"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textColor="#FFEB3B"
            android:textSize="15sp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvPrecioPassenger"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/llContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Pasajeros"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Tipo Documento: "></TextView>
        <Spinner
            android:id="@+id/spTipoDocumentoPassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"></Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="NÂ° Documento: "></TextView>
        <EditText
            android:id="@+id/etNroDocumentoPassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Apellidos y Nombres: "></TextView>
        <EditText
            android:id="@+id/etApellidosNombresPassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textSize="15sp"></EditText>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Nuevo"
                android:textSize="15sp"
                android:id="@+id/btnNuevoPassenger"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Buscar"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnBuscarPassenger"></Button>

        </LinearLayout>
        <Button
            android:id="@+id/btnReservarPassenger"
            android:text="RESERVAR VENTA"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</ScrollView>

</LinearLayout>