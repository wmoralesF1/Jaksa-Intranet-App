<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="15dp"
    android:paddingHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchInspectionBusActivity">
    <TextView
        android:id="@+id/tvtituloSearchInspectionBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda de Viajes para Inspección de Bus"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="Fecha Viaje :"
            android:textSize="15sp"
            ></TextView>
        <EditText
            android:id="@+id/etFechaViajeSearchInspectionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_weight="65"
            android:textSize="15sp"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="Sentido :"
            android:textSize="15sp"
            ></TextView>
        <Spinner
            android:id="@+id/spSentidoSearchInspectionBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:textSize="15sp"
            ></Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/btnBuscarViajesSearchInspectionBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="12sp"
        ></Button>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Id Viaje"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Hora Viaje"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="N° Bus"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Tramo"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Servicio"
            android:textStyle="bold"
            android:textSize="15sp"></TextView>

    </LinearLayout>
    <ListView
        android:id="@+id/lvListaViajeSearchInspectionBus"
        android:listSelector="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>