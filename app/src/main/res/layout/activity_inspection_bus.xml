<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InspectionBusActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InspecciÃ³n de Bus"
            android:gravity="center_horizontal"
            android:textSize="25sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Zona: "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <Spinner
                android:id="@+id/spZonaInspectionBus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:layout_marginBottom="10dp"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Cant. Pasaj. Ofic.: "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etCantPasajOficinaInspectionBus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="15sp"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="left"
                android:text="Cant. Pasaj. P. Ventas: "
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etCantPasajPuntosVentasInspectionBus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="15sp"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Cant. Pasaj. Ruta: "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etCantPasajRutaInspectionBus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="15sp"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Total Ventas Ruta.: "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etTotalVentasRutaInspectionBus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="15sp"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Observacion: "
                android:gravity="left"
                android:textSize="15sp"></TextView>
            <EditText
                android:id="@+id/etObservacionInspectionBus"
                android:layout_weight="70"
                android:textSize="15sp"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:inputType="text|textMultiLine"
                android:gravity="top"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnGrabarInspectionBus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grabar"
                android:drawableRight="@drawable/ic_baseline_save_24"
                android:textSize="12sp"></Button>

        </LinearLayout>
    </LinearLayout>
</ScrollView>