<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spTipoDocumentoPasajero"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"></Spinner>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginLeft="5dp"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etNumeroDocumentoPasajero"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"></EditText>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:srcCompat="@drawable/ic_search" />
    </LinearLayout>
    <EditText
        android:id="@+id/etNombresPasajero"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/etApellidoPaternoPasajero"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/etApellidoMaternoPasajero"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/etPrecioPromocionalPasajero"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"></EditText>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbMasuclinoPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            >

        </RadioButton>
        <RadioButton
            android:id="@+id/rbFemeninoPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino">
        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar Datos"
            android:layout_marginRight="5dp"
            android:id="@+id/btnBorrarDatosPasajero"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Datos"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnGuardarDatosPasajero"></Button>

    </LinearLayout>

</LinearLayout>